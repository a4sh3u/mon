PUT _xpack/watcher/watch/error_mail_alert
{
  "metadata" : {
    "color" : "red"
  },
  "trigger" : {
    "schedule" : {
      "interval" : "10s"
    }
  },
  "input" : {
    "search" : {
      "request" : {
        "indices" : "*watcher-*",
        "body" : {
          "query" : {
            "match" : { "log_level": "ERROR" }}
        }
      }
    }
  },
  "condition" : {
    "compare" : { "ctx.payload.hits.total" : { "gt" : 5 }}
  },
  "actions" : {
    "send_email" : {
      "email" : {
        "to" : "ashutosh.singh@ubitricity.com",
        "subject" : "Watcher Notification",
        "body" : {
                    "html" : "<html><body>{{ctx.payload.hits.hits.0._source.msg}}</body></html>"
                }
      }
    }
  }
}
